{% set title = "Сменить пароль"%}

{% extends "layouts/_layout.twig" %}

{% block content %}

    <section class="section-auth">
        <div class="form-auth form-auth--shadow">
            <h1 class="form-auth__title">Изменить пароль</h1>
            <form action="#" autocomplete="off" class="form-login">
                <div class="form-group">
                    <div class="form-group__label">Секретное слово</div>
                    <div class="form-group__wrap">
                        <input type="text" name="secret" autocomplete="off" data-rules="require" class="form-group__input" placeholder=""/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group__label">Пароль</div>
                    <div class="form-group__wrap">
                        <div class="form-group__change-type">{{ mixins.icon('eye') }}</div>
                        <input type="password" name="password" autocomplete="off" data-rules="require|password|confirm:password_confirmed" class="form-group__input" placeholder=""/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="form-group__label">Подтвердить пароль</div>
                    <div class="form-group__wrap">
                        <div class="form-group__change-type">{{ mixins.icon('eye') }}</div>
                        <input type="password" name="password_confirmed" autocomplete="off" data-rules="require|password|confirm:password" class="form-group__input" placeholder=""/>
                    </div>
                </div>
                <div class="form-group">
                    <div class="checkbox checkbox--min checkbox--policy">
                        <input type="checkbox" id="subscribe-policy2" data-rules="policy" class="checkbox__input" checked="">
                        <label for="subscribe-policy2" class="checkbox__label">
                            <span class="checkbox__icon">{{ mixins.icon('check-mark') }}</span>
                            <span class="checkbox__text checkbox__text--min">
                                            Я согласен на обработку <a href="#">персональных данных</a>
                                        </span>
                        </label>
                    </div>
                </div>
                <div class="form-group form-group--center">
                    <button type="submit" class="btn btn--min190 btn--medium">Сменить пароль</button>
                </div>
            </form>
        </div>
    </section>
{% endblock %}
