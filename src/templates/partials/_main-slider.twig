<div class="main-slider">
    <!-- Additional required wrapper -->
    <div class="swiper swiper-container">
        <div class="swiper-wrapper">
            <!-- Slides -->
            {% for i in range(0, 2) %}
                <div class="swiper-slide">
                    <a href="#" class="main-slider-item">
                        <div class="main-slider-item__image">
                            <picture>
                                <source data-srcset="img/slider-1.webp" type="image/webp"/>
                                <img class="lazy" data-src="img/slider-1.jpg" alt="">
                            </picture>
                        </div>
                        <div class="main-slider-item__container">
                            <h2 class="main-slider-item__title">Удобно для дома и прогулок!</h2>
                            <p>В наличии полные размерные ряды (48-58)</p>
                            <button class="btn btn--white" type="button">Смотреть</button>
                        </div>
                    </a>
                </div>
                <div class="swiper-slide">
                    <a href="#" class="main-slider-item">
                        <div class="main-slider-item__image">
                            <picture>
                                <source data-srcset="img/slider-2.webp" type="image/webp"/>
                                <img class="lazy" data-src="img/slider-2.jpg" alt="">
                            </picture>
                        </div>
                        <div class="main-slider-item__container">
                            <h2 class="main-slider-item__title">Удобно для дома и прогулок!</h2>
                            <p>В наличии полные размерные ряды (48-58)</p>
                            <button class="btn btn--white" type="button">Смотреть</button>
                        </div>
                    </a>
                </div>
            {% endfor %}
        </div>
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination"></div>

    <!-- If we need navigation buttons -->
    <div class="swiper-arrow sm-none">
        <div class="swiper-arrow__item swiper-arrow__item--prev">
            {{ mixins.icon('swiper-prev') }}
        </div>
        <div class="swiper-arrow__item swiper-arrow__item--next">
            {{ mixins.icon('swiper-next') }}
        </div>
    </div>
</div>
