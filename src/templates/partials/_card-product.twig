<div class="card-product">
    <div class="card-product__wrapper">
        <div class="card-product__top">
            <div class="card-product__labels">
                <div class="label-status label-status--action">
                    40%
                </div>
                <div class="label-status label-status--orange">
                    Хит
                </div>
                <div class="label-status label-status--blue">
                    New
                </div>
            </div>
            <div class="card-product__favorites">
                <div class="favorite-icon">
                    {{ mixins.icon('heart') }}
                </div>
            </div>
            <div class="card-product__fast-view">
                <a href="#" class="btn btn--medium" data-modal-ajax-open="fast-view">Быстрый просмотр</a>
            </div>
            <div class="card-product__images">
                <div class="swiper">
                    <div class="swiper-wrapper">
                        {% for i in range(0, 3) %}
                            <div class="swiper-slide">
                                <picture>
                                    <source data-srcset="img/product-{{ i + 1 }}.webp" type="image/webp"/>
                                    <img class="lazy" data-src="img/product-{{ i + 1 }}.jpg" alt="">
                                </picture>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="swiper-arrow swiper-arrow--mod sm-none">
                    <div class="swiper-arrow__item swiper-arrow__item--prev">
                        {{ mixins.icon('swiper-prev') }}
                    </div>
                    <div class="swiper-arrow__item swiper-arrow__item--next">
                        {{ mixins.icon('swiper-next') }}
                    </div>
                </div>
                <div class="swiper-pagination swiper-pagination--card-product"></div>
            </div>
        </div>
        <div class="card-product__bottom">
            <a href="./product-detail.html" class="card-product__title">Б0760-2 Футболка женская люрекс</a>
            <div class="card-product__row">
                <div class="card-product__col">
                    <span class="card-product__old-price">1 550</span>
                    <span class="card-product__price">
                                        <b>1 350</b> ₽
                                    </span>
                    <span class="card-product__price-name">Розница</span>
                </div>
                <div class="card-product__col sm-none">
                    <span class="card-product__old-price">1 200 ₽</span>
                    <span class="card-product__price"><b>1 050</b> ₽</span>
                    <span class="card-product__price-name">Мел. опт</span>
                </div>
                <div class="card-product__col sm-none">
                    <span class="card-product__price"><b>650</b> ₽</span>
                    <span class="card-product__price-name">Сред. опт</span>
                </div>
                <div class="card-product__col sm-none">
                    <span class="card-product__old-price">390 ₽</span>
                    <span class="card-product__price"><b>350</b> ₽</span>
                    <span class="card-product__price-name">Круп. опт</span>
                </div>
                <div class="card-product__col card-product__col--right none sm-flex">
                    <button type="button" aria-label="add basket" data-modal-ajax-open="add-basket" class="btn-basket">
                        <span class="btn-min__add">
{#                            {{ mixins.icon('add-basket') }}#}
                            <svg width="21" height="23" viewBox="0 0 21 23" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M17.7838 13L16.8924 8.60268C16.7034 7.67023 15.8837 7 14.9323 7H4.66885C3.67863 7 2.83748 7.72461 2.69089 8.70392L1.68739 15.4078C1.32544 17.8259 3.19834 20 5.64332 20H11" stroke="white" stroke-width="1.5"/>
                                <path d="M6.5 8.3V4.94545C6.5 3.35 8 2 10 2C12 2 13.5 3.35 13.5 4.94545V8.3" stroke="white" stroke-width="1.5" stroke-linecap="round"/>
                                <path fill-rule="evenodd" clip-rule="evenodd" d="M15 23C18.3137 23 21 20.3137 21 17C21 13.6863 18.3137 11 15 11C11.6863 11 9 13.6863 9 17C9 20.3137 11.6863 23 15 23ZM14.59 17.752V20.342H15.766V17.752H18.349V16.576H15.766V14H14.59V16.576H12V17.752H14.59Z" fill="white"/>
                            </svg>
                        </span>
                    </button>
                </div>
            </div>
            <div class="card-product__dropdown">
                <div class="card-product__description">Размер: 44 45 46 48 50 52 56 58</div>
                <div class="card-product__description">Материал: Хлопок 60%, Полиамид 40%</div>
                <button type="button" aria-label="add basket" data-modal-ajax-open="add-basket" class="card-product__button btn btn--medium">
                    <div class="btn__icon">
                        {{ mixins.icon('basket') }}
                    </div>
                    <div class="btn__text">
                        В корзину
                    </div>
                </button>
            </div>
        </div>
    </div>
</div>
