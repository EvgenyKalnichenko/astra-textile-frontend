{% macro icon(i) %}
    <svg class="icon icon-{{ i }}">
        <use xlink:href="img/sprite.svg#icon-{{ i }}"></use>
    </svg>
{% endmacro %}

{% macro placeholderSrc(width, height) %}
    {# data:image/svg+xml,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 {{width}} {{height}}'%3E%3C/svg%3E #}
    data:image/svg+xml,%3Csvg%20xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22%20viewBox%3D%220%200%20{{ width }}%20{{ height }}%22%3E%3C%2Fsvg%3E
{% endmacro %}


{% macro counter(props) %}
    <div class="counter {% if props.max === 0 %}counter--disabled{% endif %} {% if props.max > 0 and props.max < 20 %}counter--yellow{% endif %} {% if props.max > 20 %}counter--green{% endif %}"
         data-counter>
        <div class="counter__name">{{ props.name }}</div>
        <div class="counter__col">
            <div class="counter__main">
                <div class="counter__btn" data-counter-btn="-1">
                    <svg class="icon icon-minus">
                        <use xlink:href="img/sprite.svg#icon-minus"></use>
                    </svg>
                </div>
                <input class="counter__input" type="number" value="0" data-counter-input
                       data-counter-min="{{ props.min }}" data-counter-max="{{ props.max }}">
                <div class="counter__btn" data-counter-btn="1">
                    <svg class="icon icon-plus">
                        <use xlink:href="img/sprite.svg#icon-plus"></use>
                    </svg>
                </div>
            </div>
            <div class="counter__info">Ост: {{ props.max }} шт.</div>
            {% if props.max === 0 %}
                <div class="counter__popup">
                    <a href="#" class="btn-i btn-i--nowrap btn-i--yellow" data-modal-ajax-open="modal-wish">
                        <div class="btn-i__icon">
                            <svg class="icon icon-clock-v2">
                                <use xlink:href="img/sprite.svg#icon-clock-v2"></use>
                            </svg>
                        </div>
                        <div class="btn-i__text">В лист ожидания</div>
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
{% endmacro %}
